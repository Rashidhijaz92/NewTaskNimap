@model ProCateNimapInfoTech.Models.Category

@{
    ViewBag.Title = "Create Category";
}

@using (Html.BeginForm("CreateCat", "SimpleCatMasterCRUD"))
{
    <div style="font-family:Arial">
        <h2>Create Category</h2>
        <form asp-action="Create">
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(r => r.CategoryName, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">

                        @Html.EditorFor(r => r.CategoryName, new { htmlAttribute = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-group-sm btn-success">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
}


