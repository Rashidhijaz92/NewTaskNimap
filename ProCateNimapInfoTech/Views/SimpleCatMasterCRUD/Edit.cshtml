@model ProCateNimapInfoTech.Models.Category

@{
    ViewBag.Title = "Edit";
}

<h2>Update Category</h2>



@using (Html.BeginForm("Edit", "SimpleCatMasterCRUD"))
{
    <div style="font-family:Arial">
        

        <form asp-action="">



            <div class="form-horizontal">
                @Html.HiddenFor(model => model.PK_CategoryId)

                <div class="form-group">
                    @Html.LabelFor(r => r.CategoryName, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">

                        @Html.EditorFor(r => r.CategoryName, new { htmlAttribute = new { @class = "form-control" } })
                    </div>

                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-group-sm btn-success">update</button>
                    </div>
                </div>

            </div>
        </form>
    </div>
}